<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#E6E1E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/table_task">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            android:layout_width="60dp"
            android:padding="8dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/nameGroup"
            android:text="Chi tiet cong viec"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#F30909"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id1">
        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:id="@+id/HeadingTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_bg_border"
            android:gravity="center"
            android:text="Ten cong viec: "
            android:textColor="@color/black"
            android:textSize="20dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/item_fshare"
        android:id="@+id/id3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/deadLine"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeadLine: dd/mm/yyyy"/>
        <TextView
            android:id="@+id/status"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trang thai: Chua hoan thanh"/>
        <TextView
            android:id="@+id/notes"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chu: 3 chuc nang: \n # Dang nhap, dang ky \n # Chia se tai lieu \n # Len cong viec"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đánh dấu đã hoàn thành:"/>
            <ImageView
                android:padding="8dp"
                android:id="@+id/ic_check"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/check_blank"/>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:id="@+id/fileTask"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="# name file"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/dayFinish"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="end"
            android:textSize="15dp"
            android:text="Ngày hoàn thành : dd/mm/yyyy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>