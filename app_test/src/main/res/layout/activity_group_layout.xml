<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#E6E1E1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"/>
    <RelativeLayout
        android:id="@+id/id1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/table_task">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"
            android:layout_width="60dp"
            android:padding="8dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/name_group2"
            android:text="Nhóm 5 Mobile"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#F80303"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="20dp"
        android:id="@+id/id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <ImageView
                android:id="@+id/newTaskList"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/task_list"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:id="@+id/btnVideo"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:src="@drawable/cam"
                android:layout_toEndOf="@id/newTaskList"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/id3"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/id2">
        <TextView
            android:id="@+id/mess_null"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:text="Chưa có thông báo mới"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/item_fshare">

        <ImageView
            android:layout_below="@id/textContent"
            android:id="@+id/btnOption"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:src="@drawable/plus" />
        <ImageView
            android:layout_below="@id/textContent"
            android:id="@+id/file"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_file"
            android:visibility="invisible"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:layout_below="@id/textContent"
            android:layout_toEndOf="@id/file"
            android:id="@+id/Calendar"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_calendar"
            android:visibility="invisible"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:id="@+id/textContent"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/btnOption"
            android:textColor="@color/black"
            android:visibility="gone"
            />
        <EditText
            android:id="@+id/textTitle"
            android:layout_below="@id/textContent"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/btnOption"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_below="@id/textContent"
            android:id="@+id/btnArrow"
            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/textTitle"
            android:padding="8dp"
            android:src="@drawable/arrow" />
    </RelativeLayout>
</RelativeLayout>